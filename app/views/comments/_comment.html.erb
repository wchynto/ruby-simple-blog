<% unless comment.archived? %>
    <p>        
        <strong>Commenter:</strong>
        <%= comment.commenter %> <br>
        <strong>Comment:</strong>
        <%= comment.body %>
    </p>
    <%= link_to 'Delete Comment', [comment.article, comment], data: {
        turbo_method: :delete,
        turbo_confirm: 'Are you sure?'
    } %>
<% end %>
